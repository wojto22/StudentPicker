<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentPicker.MainPage">

    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Dodaj klasę" Clicked="AddClass"/>
            <Button Text="Usuń klasę" Clicked="DeleteClass"/>
        </HorizontalStackLayout>

        <CollectionView x:Name="classes" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontSize="20"></Label>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="->" Clicked="GoToClass" WidthRequest="150"/>
    </VerticalStackLayout>

</ContentPage>
