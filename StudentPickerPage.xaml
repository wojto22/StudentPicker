<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentPicker.StudentPickerPage"
             Title="StudentPickerPage">
    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Dodaj ucznia" Clicked="AddStudent"/>
            <Button Text="Usuń ucznia" Clicked="DeleteStudent"/>
            <Button Text="Edytuj ucznia" Clicked="EditStudent"/>
            <Button Text="Wylosuj ucznia" Clicked="PickStudent"/>
            <Button Text="Wczytaj klasę" Clicked="LoadClass"/>
        </HorizontalStackLayout>

        <Label Text="Uczniowie: " FontSize="22"/>
        <CollectionView x:Name="students" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontSize="20"></Label>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>